<%- include("../partials/header")%>
<%- include("../partials/navbar")%>

<main class="container">
  
    <form action="/blogs/<%= blog._id%>?_method=PATCH" method="POST">
        <div class="form-row">
         
         
          <div class="col-md-4 mb-3">
              
            <label for="name">Author Name</label>
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroupPrepend2">@</span>
              </div>
              <input type="text" class="form-control name"  name="name"  placeholder="Username" value="<%=blog.name%>" aria-describedby="inputGroupPrepend2" required>
            </div>
          </div>
        </div>
        <div class="form-row">
            <label for="title">
            Title   
            </label>
            
            <input type="text" class="form-control" name="title" placeholder="Title" value="<%=blog.title %>">
        </div>
       <div class="form-row">
           <label for="desc">
              
           </label>
           <legend > Write About Your Topic</legend>
           
           <input class="desc"  rows="9" cols="50" name="desc" value="<%=blog.desc%>">
       </div>
        <div class="form-group">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="invalidCheck2" required>
            <label class="form-check-label" for="invalidCheck2">
              Agree to terms and conditions
            </label>
          </div>
        </div>
        <button class="btn btn-info" type="submit">Make Changes</button>
      </form>
      <form class="form-inline" action="/blogs/<%=blog._id%>?_method=DELETE" method="POST"><button  class="btn btn-danger " type="submit">Delete</button></form>


</main>

<%- include("../partials/footer") %>


