<%- include("../partials/header")%>
<%- include("../partials/navbar")%>

<main class="container">
  
    <form action="/blogs" method="POST">
        <div class="form-row">
         
         
          <div class="col-md-4 mb-3">
              
            <label for="name">Author Name</label>
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroupPrepend2">@</span>
              </div>
              <input type="text" class="form-control name"  name="name"  placeholder="Username" aria-describedby="inputGroupPrepend2" required>
            </div>
          </div>
        </div>
        <div class="form-row">
            <label for="title">
            Title   
            </label>
            
            <input type="text" class="form-control" name="title" placeholder="Title">
        </div>
       <div class="form-row">
           <label for="desc">
              
           </label>
           <legend > Write About Your Topic</legend>
           <textarea class="desc"  rows="9" cols="50"></textarea>
       </div>
        <div class="form-group">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="invalidCheck2" required>
            <label class="form-check-label" for="invalidCheck2">
              Agree to terms and conditions
            </label>
          </div>
        </div>
        <button class="btn btn-primary" type="submit">Post Blog</button>
      </form>

</main>

<%- include("../partials/footer") %>


